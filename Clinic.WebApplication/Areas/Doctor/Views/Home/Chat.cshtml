@{
    ViewBag.Title = "گقتگوی آنلاین";
}

<div class="container">
    <div class="row" id="ruleBox">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="text-center">
                            <h4 class="font-600">گفتگوی آنلاین با بیمار گربه پور</h4>

                        </div>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div>
        </div>
    </div>
    <div class="row" id="chatCardBox">
        <div class="col-sm-12">
            <div class="card-box">
                <div class="dropdown pull-right">
                    <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">حذف گفتگو</a></li>
                        <li class="divider"></li>
                        <li><a href="#">بازشگت</a></li>
                    </ul>
                </div>
                <h4 class="header-title m-t-0 m-b-30">بیمار گربه گربه پور</h4>
                <div class="row">
                    <div id="chatBox" class="col-sm-12 frame">
                        <ul id="messageBox"></ul>
                        <div style="padding: 10px">
                            <input class="msj-type macro mytext" placeholder="...چیزی بنویسید " />
                        </div>
                    </div>

                    <div class="spinner">
                        <div class="rect1"></div>
                        <div class="rect2"></div>
                        <div class="rect3"></div>
                        <div class="rect4"></div>
                        <div class="rect5"></div>
                    </div>
                    <div class="text-center">
                        <h4 id="spinner-text" style="color: #000000">در حال اتصال... لطفا صبر کنید</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Head {
    <link href="/Chat/css/loading.css" rel="stylesheet" />
    <link href="/Chat/css/chat.css" rel="stylesheet" />
}

@section Scripts {
    <script src="/Chat/js/chat.js"></script>
}
